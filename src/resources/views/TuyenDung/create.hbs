<div class="container">
  <div class="col-sm-6 col-lg-5"  style="display: inline-block; background-color: Lavender;" >
    <a style="padding: 1px;" href="/TuyenDung/quanLyTD" class="btn btn-outline-danger">
        <img src="../../img/thoat.png" alt="" width="40px" height="40px">
      </a>
    <h3>TẠO THÔNG BÁO MỚI</h3>
    <h6 style="color: red;">Chú ý ghi đầy đủ thông tin!</h6>
    <form method="POST" action="/TuyenDung/store">

      <div class="form-group">
        <label for="tenTD">Tên Thông Báo</label>
        <input type="type" class="form-control" name="tenTD" id="tenTD" required>
      </div>

      <div class="form-group">
        <label for="noidungTD">Nội Dung Thông Báo</label>
        <textarea type="type" class="form-control" name="noidungTD" id="noidungTD" required></textarea>
      </div>
      <div class="form-group">
        <label for="hethan">Ngày Hết Hạn</label>
        <input type="date" class="form-control" onchange="return kt_ngaygiao(this.value)" name="hethan" id="hethan"
          required>
        <p id="ktngaygiao" class="dauvao"></p>
      </div>
      <a href="/TuyenDung/quanLyTD" class="btn btn-danger">Cancel</a>
      <button type="reset" class="btn btn-primary">Reset</button>
      <button type="submit" class="btn btn-success">Submit</button>
    </form>
  </DIV>
</div>


<script src="../../javascript/script.js"></script>