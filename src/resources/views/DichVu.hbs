                        <h5 class="card-text"> Khuyến mãi: {{this.khuyenmai}}%</h5>
                        <p><strong>Thông tin chi tiết:</strong> {{this.thongtinsp}}</p>
                    </div>
                </div>
            </div>
            {{else}}
            <h4>Hiện chưa có sản phẩm nào</h4>
            {{/each}}
            
        </div>
