
<div class="container">
    <div>
            <a href=""  id="trove" class="btn btn-danger">Trở Về</a>
        </div>
    <table class="table table-hover">
          <thead>
            <tr>
              <th></th>
              <th>Tên Sản Phẩm</th>
              <th>Hình Ảnh</th>
              <th>Giá(đ)</th>
              <th>Khuyến Mãi(%)</th>
              <th>Số Lượng</th>
              <th>Ghi Chú</th>
              <th>Thành Tiền(đ)</th>
            </tr>
          </thead>
          <tbody>
            {{#each chitietdonhang}}
            <tr>   
                <td>{{sum @index 1}}</td>
                <td>{{this.tensp}}</td> 
                <td></td>
                <td>{{this.giasp}}</td>
                <td>{{this.sale}}</td> 
                <td>{{this.soluong}}</td>
                <td>{{this.ghichu}}</td> 
                <td>{{this.thanhtien}}</td>          
            </tr>
            {{/each}}
          </tbody>
        </table>
</div>
<script>
    var qs = (function (a) {
    if (a == "") return {};
    var b = {};
    for (var i = 0; i < a.length; ++i) {
      var p = a[i].split('=', 2);
      if (p.length == 1)
        b[p[0]] = "";
      else
        b[p[0]] = decodeURIComponent(p[1].replace(/\+/g, " "));
    }
    return b;
  })(window.location.search.substr(1).split('&'));
  temp = qs['linkCacel']
  if (temp) {
      document.getElementById('trove').href= '/DonHang/'+temp;
  }
</script>